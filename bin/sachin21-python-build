#!/usr/bin/env sh
set -e

for TARGET_VERSION in $@; do
  if pyenv install $TARGET_VERSION && pyenv global $TARGET_VERSION; then
    export RBENV_VERSION=$TARGET_VERSION

    pip install pygments
    pip install pygments-style-solarized
    pip install thefuck

    echo "All done"
  else
    echo "[Error] $TARGET_VERSION is unsuccessfully installed"
  fi
done

# # For rbenv
# # ---------------------------------------------------**
if [ -d "$HOME/.rbenv" ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init - zsh)"
else
  warn "  x [Warning] rbenv is not installed"
fi

# For nodenv
# ---------------------------------------------------**
if [ -d "$HOME/.nodenv" ]; then
  export PATH="$HOME/.nodenv/bin:$PATH"
  export PATH="$HOME/.nodenv/shims:$PATH"
  eval "$(nodenv init -)"
else
  warn "  x [Warning] nodenv is not installed"
fi

# For oh-my-zsh
# ---------------------------------------------------**
if [ -d "$HOME/.oh-my-zsh" ]; then
  plugins=(
    autojump
    brew
    brew-cask
    bundler
    colored-man-pages
    docker
    docker-compose
    gem
    git
    git-flow
    go
    heroku
    history
    mercurial
    nodenv
    pip
    rails
    rake-fast
    ruby
    sublime
    vagrant
  )
  ZSH="$HOME/.oh-my-zsh"
  ZSH_THEME="ys"
  DISABLE_AUTO_UPDATE="true"

  . "$ZSH/oh-my-zsh.sh"
else
  warn "  x [Warning] oh-my-zsh is not installed"
fi

# For tmux
# ---------------------------------------------------**
if command_exists tmux; then
  export TMUX_POWERLINE_SEG_WEATHER_LOCATION="26237038"
else
  warn "  x [Warning] tmux is not installed"
fi

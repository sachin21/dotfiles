#!/usr/bin/env zsh

# Print Colored messages
# ---------------------------------------------------**
function logging() {
  local red="31"
  local yellow="33"
  local blue="34"
  local turquoise="36"
  local white="37"
  local text="$2"
  local _color=

  case "$1" in
   "fail") _color=$red ;;
   "warn") _color=$yellow ;;
   "ask") _color=$blue ;;
   "message") _color=$turquoise ;;
   "succeed") _color=$white ;;
  esac

  printf "\033[${_color}m${text}\033[m\n"
}

declare -a _functions=(message warn succeed fail ask)
for function in $_functions; do
  eval "function "$function"() { logging \"$function\" \"\$@\" }"
done

unset _functions

# Utilities
# ---------------------------------------------------**
function command_exists(){
  type $1 &> /dev/null
}

function command_not_exists() {
  ! type $1 &> /dev/null
}

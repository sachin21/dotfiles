begin
  require 'awesome_print'
  AwesomePrint.pry!
rescue LoadError
  puts "Could not load awesome_print"
end

begin
  require 'yaml'
rescue LoadError
  puts "Could not load yaml"
end

begin
  require 'csv'
rescue LoadError
  puts "Could not load csv"
end

Pry.commands.alias_command 'c', 'continue'
Pry.commands.alias_command 's', 'step'
Pry.commands.alias_command 'n', 'next'

[core]
  editor = vim
  excludesfile = ~/.global_ignore
[github]
  user = Satoshi Ohmori
[url "git@github.com:"]
  pushinsteadof = https://github.com
[ghq]
  root = ~/Projects
[alias]
  open = "!vim $(git diff --name-only)"
  opena = "!vim $(git diff --staged --name-only)"
  sync = !git checkout master && git pull origin master --rebase && git fetch -p origin && git branch -d $(git branch --merged | grep -v master | grep -v '*')
  syncd = !git checkout develop && git pull origin master --rebase && git fetch -p origin && git branch -d $(git branch --merged | grep -v master | grep -v '*')
  syncm = !git checkout master && git pull upstream master --rebase && git fetch -p origin && git branch -d $(git branch --merged | grep -v master | grep -v '*')
[push]
  default = matching
[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line

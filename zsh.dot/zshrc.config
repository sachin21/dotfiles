# rbenv
if [ -d ~/.rbenv ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init - zsh)"
else
  echo "[Warning] rbenv is not installed" 1>&2
fi

# pyenv
if [ -d ~/.pyenv ]; then
  export PATH="$HOME/.pyenv/bin:$PATH"
  eval "$(pyenv init -)"
else
  echo "[Warning] pyenv is not installed" 1>&2
fi

# nodenv
if [ -d ~/.nodenv ]; then
  export PATH="$HOME/.nodenv/bin:$PATH"
  eval "$(nodenv init -)"
else
  echo "[Warning] nodenv is not installed" 1>&2
fi

# oh-my-zsh
if [ -d ~/.oh-my-zsh ]; then
  plugins=(git heroku ruby rails bundler pip docker sublime vagrant pyenv tmux gem brew brew-cask autojump history)
  ZSH=$HOME/.oh-my-zsh
  ZSH_THEME="ys"
  source $ZSH/oh-my-zsh.sh
else
  echo "[Warning] oh-my-zsh is not installed" 1>&2
fi

# tmux
export TMUX_POWERLINE_SEG_WEATHER_LOCATION="26237038"

# For rbenv
if [ -d ~/.rbenv ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  export PATH="$HOME/.rbenv/shims:$PATH"
  eval "$(rbenv init - zsh)"
else
  echo "[Warning] rbenv is not installed" 1>&2
fi

# For pyenv
if [ -d ~/.pyenv ]; then
  export PATH="$HOME/.pyenv/bin:$PATH"
  export PATH="$HOME/.pyenv/shims:$PATH"
  eval "$(pyenv init -)"
else
  echo "[Warning] pyenv is not installed" 1>&2
fi

# For nodenv
if [ -d ~/.nodenv ]; then
  export PATH="$HOME/.nodenv/bin:$PATH"
  export PATH="$HOME/.nodenv/shims:$PATH"
  eval "$(nodenv init -)"
else
  echo "[Warning] nodenv is not installed" 1>&2
fi

# For gvm
if [ -d ~/.gvm ]; then
  [[ -s "$HOME/.gvm/scripts/gvm" ]] && source "$HOME/.gvm/scripts/gvm"
else
  echo "[Warning] gvm is not installed" 1>&2
fi

# For oh-my-zsh
if [ -d ~/.oh-my-zsh ]; then
  plugins=(git heroku ruby rails bundler pip docker sublime vagrant pyenv tmux gem brew brew-cask autojump history)
  ZSH=$HOME/.oh-my-zsh
  ZSH_THEME="ys"
  . $ZSH/oh-my-zsh.sh
else
  echo "[Warning] oh-my-zsh is not installed" 1>&2
fi

# For tmux
if type tmux > /dev/null 2>&1; then
  export TMUX_POWERLINE_SEG_WEATHER_LOCATION="26237038"
else
  echo "[Warning] tmux is not installed" 1>&2
fi

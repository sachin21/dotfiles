# For rbenv
# ---------------------------------------------------**
if [ -d ~/.rbenv ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  export PATH="$HOME/.rbenv/shims:$PATH"
  eval "$(rbenv init - zsh)"
else
  echo "  x [Warning] rbenv is not installed"
fi

# For pyenv
# ---------------------------------------------------**
if [ -d ~/.pyenv ]; then
  export PATH="$HOME/.pyenv/bin:$PATH"
  export PATH="$HOME/.pyenv/shims:$PATH"
  eval "$(pyenv init -)"
else
  echo "  x [Warning] pyenv is not installed"
fi

# For nodenv
# ---------------------------------------------------**
if [ -d ~/.nodenv ]; then
  export PATH="$HOME/.nodenv/bin:$PATH"
  export PATH="$HOME/.nodenv/shims:$PATH"
  eval "$(nodenv init -)"
else
  echo "  x [Warning] nodenv is not installed"
fi

# For gvm
# ---------------------------------------------------**
if [ -d ~/.gvm ]; then
  [[ -s "$HOME/.gvm/scripts/gvm" ]] && . "$HOME/.gvm/scripts/gvm"
else
  echo "  x [Warning] gvm is not installed"
fi

# For oh-my-zsh
# ---------------------------------------------------**
if [ -d ~/.oh-my-zsh ]; then
  plugins=(
    git
    heroku
    ruby
    rails
    bundler
    docker
    sublime
    vagrant
    pyenv
    tmux
    gem
    brew
    brew-cask
    autojump
    history
    rake-fast
  )
  ZSH=$HOME/.oh-my-zsh
  ZSH_THEME="tonotdo"
  DISABLE_AUTO_UPDATE="true"

  . $ZSH/oh-my-zsh.sh
else
  echo "  x [Warning] oh-my-zsh is not installed"
fi

# For tmux
# ---------------------------------------------------**
if type tmux > /dev/null 2>&1; then
  export TMUX_POWERLINE_SEG_WEATHER_LOCATION="26237038"
else
  echo "  x [Warning] tmux is not installed"
fi

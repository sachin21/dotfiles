# For rbenv
# ---------------------------------------------------**
if [ -d "$HOME/.rbenv" ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  export PATH="$HOME/.rbenv/shims:$PATH"
  eval "$(rbenv init - zsh)"
else
  warn "  x [Warning] rbenv is not installed"
fi

# For pyenv
# ---------------------------------------------------**
if [ -d "$HOME/.pyenv" ]; then
  export PATH="$HOME/.pyenv/bin:$PATH"
  export PATH="$HOME/.pyenv/shims:$PATH"
  eval "$(pyenv init -)"
else
  warn "  x [Warning] pyenv is not installed"
fi

# For nodenv
# ---------------------------------------------------**
if [ -d "$HOME/.nodenv" ]; then
  export PATH="$HOME/.nodenv/bin:$PATH"
  export PATH="$HOME/.nodenv/shims:$PATH"
  eval "$(nodenv init -)"
else
  warn "  x [Warning] nodenv is not installed"
fi

# For gvm
# ---------------------------------------------------**
if [ -d "$HOME/.gvm" ]; then
  [[ -s "$HOME/.gvm/scripts/gvm" ]] && . "$HOME/.gvm/scripts/gvm"
else
  warn "  x [Warning] gvm is not installed"
fi

# For oh-my-zsh
# ---------------------------------------------------**
if [ -d "$HOME/.oh-my-zsh" ]; then
  plugins=(
    autojump
    brew
    brew-cask
    bundler
    docker
    gem
    git
    go
    heroku
    history
    pip
    pyenv
    rails
    rake-fast
    ruby
    sublime
    tmux
    vagrant
  )
  ZSH="$HOME/.oh-my-zsh"
  ZSH_THEME="ys"
  DISABLE_AUTO_UPDATE="true"

  . "$ZSH/oh-my-zsh.sh"
else
  warn "  x [Warning] oh-my-zsh is not installed"
fi

# For tmux
# ---------------------------------------------------**
if command_exists tmux; then
  export TMUX_POWERLINE_SEG_WEATHER_LOCATION="26237038"
else
  warn "  x [Warning] tmux is not installed"
fi

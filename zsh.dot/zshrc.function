# Useful functions
# ---------------------------------------------------**
agvim() {
  vim $(ag "$@" | peco --query "$LBUFFER" | awk -F : '{print "-c " $2 " " $1}')
}

cr() {
 cd `ghq list -p | peco`
 zle accept-line
 zle clear-screen
}

peco-select-history() {
  if command_not_exists tac; then
    warn "  x [Warning] tac is not installed"
    exit 1
  fi

  BUFFER=$(\history -n 1 | \
    tac | \
    peco --query "$LBUFFER")
  CURSOR=$#BUFFER
  zle clear-screen
}

# Set zle
# ---------------------------------------------------**
zle -N peco-select-history
zle -N cr

# Bind functions
# ---------------------------------------------------**
bindkey '^r' peco-select-history
bindkey '^s' cr

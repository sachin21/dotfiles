function cr() {
 cd `ghq list -p | peco`
 zle accept-line
 zle clear-screen
}

function peco-select-history() {
  local tac
  if which tac > /dev/null; then
    tac="tac"
  else
    tac="tail -r"
  fi
  BUFFER=$(\history -n 1 | \
    eval $tac | \
    peco --query "$LBUFFER")
  CURSOR=$#BUFFER
  zle clear-screen
}

zle -N peco-select-history
zle -N cr

bindkey '^r' peco-select-history
bindkey '^s' cr
